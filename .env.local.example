# Posts Domain - Local Development Environment Configuration
# For local development only - uses local infrastructure services
# For cloud deployment, use .env.cloud.example instead

# Database Configuration
POSTGRES_URL=postgres://postgres:postgres@localhost:5432/posts_db?sslmode=disable

# Server Configuration
PORT=8080

# MinIO Configuration (local development only)
# Note: Production uses Google Cloud Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=posts-bucket
MINIO_USE_SSL=false

# Kafka Configuration (local development only)
# Note: Production uses Confluent Cloud
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=posts.events

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# Environment
ENVIRONMENT=development

# Logging
LOG_LEVEL=info